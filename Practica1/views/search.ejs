<html lang="es">

<head>
    <title>Busqueda: FaceBluff</title>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="img/favicon.ico" />
    <link href="/css/style.css" rel="stylesheet" type="text/css" media="screen">
    <link href="/css/style-search.css" rel="stylesheet" type="text/css" media="screen">
</head>

<body>
    <div class="header">
        <img id="app-image" src="/img/logo.png" alt="FaceBluff-logo">
        <div class="options-user">
            <a href="profile.html"> Perfil</a>
            <a href="friends.html"> Amigos </a>
            <a href="#"> Preguntas </a>
            <a href="index.html"> Desconectar </a>
            <span><%= user.puntos %></span>
        </div>
    </div>
    <div class="body-content">
        <div class="section-message">Resultados de b√∫squeda: '<%=busqueda%>'</div>
        <div class="search_table">
            <table>
                <% resultado.forEach(elem =>{%>
                    <tr>
                        <td><img class="friend_image" src="/icons/Vampire Bat-01.png" alt="Friend_image"></td>
                        <td><span class="friend_name"> <%= elem.nombre %> </span></td>
                        <td>
                            <form action="/addFriend/<%=elem.id%>" method="POST" >
                                <input class="profile_buttons" type="submit" value="Solicitar amistad"/>
                            </form>
                        </td>
                    </tr>
                <% });%>
            </table>
        </div>
    </div>
</body>

</html>