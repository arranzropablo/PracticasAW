<html lang="es">

<head>
    <title>Busqueda: FaceBluff</title>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="img/favicon.ico" />
    <link href="/css/style.css" rel="stylesheet" type="text/css" media="screen">
    <link href="/css/style-search.css" rel="stylesheet" type="text/css" media="screen">
</head>

<body>
    <div class="header">
        <img id="app-image" src="/img/logo.png" alt="FaceBluff-logo">
        <div class="options-user">
            <a href="/profile/user/<%=loguedUser.email%>"> Perfil</a>
            <a href="/friends"> Amigos </a>
            <a href="/questions"> Preguntas </a>
            <a href="/desconectar"> Desconectar </a>
            <span><%= loguedUser.puntos %> puntos</span>
        </div>
    </div>
    <div class="body-content">
        <div class="section-message">Resultados de b√∫squeda: '
            <%=busqueda%>'</div>
        <div class="generic_table">
            <table>
                <% resultado.forEach(elem =>{%>
                    <tr>
                        <td><img class="friend_image" src="/icons/Vampire Bat-01.png" alt="Friend_image"></td>
                        <td>
                            <a class="friend_name name" href="/profile/user/<%=elem.email%>">
                                <%= elem.nombre %>
                            </a>
                        </td>
                        <td>
                            <% if (elem.relacion === null) { %>
                                <form action="/friends/add/<%=elem.email%>" method="POST">
                                    <input class="profile_buttons" type="submit" value="Solicitar amistad" />
                                </form>
                            <% } else { %>
                                <% if (elem.relacion) { %>
                                    <span> Solicitud de amistad pendiente </span>
                                <% } else { %>
                                    <span> Amigo </span>
                            <% } }%>
                        </td>
                    </tr>
                    <% });%>
            </table>
        </div>
    </div>
</body>

</html>